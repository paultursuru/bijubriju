<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
    </div>
    <div class="col-sm-12 col-md-6">
      <h1><%= @bijou.name %></h1>
      <p>Some awesome description of our amazing bijou.</p>
      <p>Amount: <%= humanized_money_with_symbol(@bijou.price) %></p>
      <% @bijou.pictures.each do |picture| %>
        <%= cl_image_tag(picture.photo, width: 400, height: 300, crop: :fill) %>
      <% end %>
      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'bijou_id', @bijou.id %>
        <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
      <% end %>
      <h3>Wanna see these other bijous ?</h3>
      <ul>
        <% @related_bijous.each do |r| %>
          <li><%= r.name %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= cl_image_tag(@bijou.pictures.first.photo, class: "d-block w-100") %>
    </div>
    <% @bijou.pictures.each do |picture| %>
      <div class="carousel-item">
        <%= cl_image_tag(picture.photo, width: 400, height: 300, crop: :fill, class: "d-block w-100") %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="nice-box">
  <div class="biju-cards">
    <% @bijous.each do |bijou| %>
      <div class="biju-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(bijou.pictures.first.photo) %>')">
        <%= link_to bijou_path(bijou) do %>
              <h5 class=""><%= bijou.name %></h5>
              <p><%= humanized_money_with_symbol(bijou.price) %></p>
        <% end %>
        <p>
          <% bijou.tag_list.each do |tag| %>
            <%= link_to tag, tagged_path(tag: tag) %>
          <% end %>
        </p>
      </div>
      <% if user_signed_in? %>
        <% if current_user.admin == true %>
          <%= link_to "edit", edit_bijou_path(bijou) %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
